{
  "$schema": "./scripts/website-assets/schemas/v1.json",
  "projectType": "openSource",
  "lineWidth": 160,
  "typescript": {
    "useBraces": "preferNone",
    "singleBodyPosition": "nextLine",
    "preferHanging": true,
    "preferSingleLine": false,
    "nextControlFlowPosition": "nextLine",
    "semiColons": "always",
    "arrowFunction.useParentheses": "preferNone",
    "tryStatement.nextControlFlowPosition": "sameLine"
  },
  "json": {
    "indentWidth": 2
  },
  "includes": [
    "**/*.{ts,tsx,js,jsx,json}"
  ],
  "excludes": [
    "packages/playground/public/vs/**/*.*",
    "packages/playground/build/**/*.*",
    "build-website/**/*.*",
    "**/dist/**/*.*",
    "**/target/**/*.*",
    "**/wasm/**/*.*"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.18.5.wasm",
    "https://plugins.dprint.dev/json-0.2.3.wasm"
  ]
}
